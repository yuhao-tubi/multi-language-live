{
  "name": "streaming-demux-remux",
  "version": "1.0.0",
  "description": "Multi-process HLS audio manipulation pipeline with SRS integration",
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/main.ts",
    "start": "node dist/main.js",
    "verify": "bash scripts/verify-setup.sh",
    "check": "tsc --noEmit",
    "srs:start": "bash scripts/start-srs.sh",
    "srs:stop": "bash scripts/stop-srs.sh",
    "srs:restart": "bash scripts/restart-srs.sh",
    "srs:remove": "bash scripts/remove-srs.sh",
    "srs:logs": "bash scripts/logs-srs.sh"
  },
  "keywords": [
    "hls",
    "audio",
    "processing",
    "ffmpeg",
    "srs",
    "streaming"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "m3u8-parser": "^7.2.0",
    "m3u8stream": "^0.8.6"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.3.3"
  }
}
