{
  "name": "live-media-service",
  "version": "1.0.0",
  "description": "Production-ready live HLS stream processor with external audio processing",
  "main": "src/main.ts",
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "build": "tsc",
    "start": "node dist/main.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.ts"
  },
  "keywords": [
    "hls",
    "streaming",
    "ffmpeg",
    "audio-processing",
    "websocket"
  ],
  "license": "MIT",
  "dependencies": {
    "axios": "^1.12.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "fs-extra": "^11.2.0",
    "m3u8-parser": "^7.1.0",
    "m3u8stream": "^0.8.6",
    "socket.io-client": "^4.8.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/fs-extra": "^11.0.4",
    "@types/m3u8-parser": "^7.2.5",
    "@types/node": "^20.10.0",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^1.1.0",
    "supertest": "^6.3.3",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  }
}
